<%- include('../template/start.ejs') %>
<%- include('../template/navbar.ejs') %>

<!-- FLOATING SIDEBAR -->
<nav class="floating-menu">
  <ul class="side-menu">
    <li>
      <a href="/feed" class="ripple" title="Home" id="home-link">
        <i class="fas fa-home fa-lg"></i>
      </a>
    </li>
    <li>
      <a href="/profile" class="ripple" title="Profile" id="profile-link">
        <i class="fas fa-user fa-lg"></i>
      </a>
    </li>
    <li>
      <a href="/posting" class="ripple active" title="Add post" id="add-post-link">
        <i class="fas fa-plus fa-lg"></i>
      </a>
    </li>
    <li>
      <a href="#" class="ripple" title="Settings" id="settings-link">
        <i class="fas fa-gears fa-lg"></i>
      </a>
    </li>
    <li>
      <a href="/logout" class="ripple" title="Logout" id="logout-link" onclick="return confirm('Konfirmasi keluar?')">
        <i class="fas fa-right-from-bracket fa-lg"></i>
      </a>
    </li>
  </ul>
  <div class="side-menu-bg"></div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const active = document.querySelectorAll(".side-menu li a")

    active.forEach((link) => {
      link.addEventListener("click", function() {
        active.forEach((l) => l.classList.remove("active"))
        this.classList.add("active")
      })
    })
  })
</script>

<div class="container pt-3">
  <% if (message) { %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% } %>
  <h1>Create new post</h1>
  <div class="row d-flex justify-content-center">
    <div class="card bg-light w-75 py-2">
      <div class="card-body">
        <form action="/posting/tambah" method="post" enctype="multipart/form-data">

          <div class="row mb-3">
            <div class="col-lg-4">
              <label class="form-label">Media 1</label>
              <input type="file" name="form_media1" accept=".png, .jpeg, .jpg, .svg, .webp, .mp4, .mkv"><br>
            </div>
            <div class="col-lg-4">
              <label class="form-label">Media 2</label>
              <input type="file" name="form_media2" accept=".png, .jpeg, .jpg, .svg, .webp, .mp4, .mkv"><br>
            </div>
            <div class="col-lg-4">
              <label class="form-label">Media 3</label>
              <input type="file" name="form_media3" accept=".png, .jpeg, .jpg, .svg, .webp, .mp4, .mkv"><br>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12 mb-3 w-75">
              <label class="form-label">Caption</label>
              <textarea name="form_caption" class="form-control" placeholder="Input post caption"></textarea>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save ml-2 me-2"></i>
            Post
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../template/end.ejs') %>